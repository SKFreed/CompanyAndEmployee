@model IEnumerable<CompanyAndEmployee.Models.Companies>

@{
    ViewData["Title"] = "Index";
}

<h1>Companies</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                    @*Модальное для изменения деталей*@
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#EditCompany-@item.Id">Edit</button>
                    <div class="modal fade" id="EditCompany-@item.Id" tabindex="-1" aria-labelledby="EditCompanyLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="EditCompanyLabel-@item.Id">Modal title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <form asp-action="Edit" asp-controller="Companies">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <input type="hidden" asp-for="@item.Id" name="id"/>
                                                <div class="form-group">
                                                    <label asp-for="@item.Name" class="control-label"></label>
                                                    <input asp-for="@item.Name" name="Name" class="form-control" />
                                                    <span asp-validation-for="@item.Name" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="@item.Phone" class="control-label"></label>
                                                    <input asp-for="@item.Phone" name="Phone" class="form-control" />
                                                    <span asp-validation-for="@item.Phone" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="@item.Email" class="control-label"></label>
                                                    <input asp-for="@item.Email" name="Email" class="form-control" />
                                                    <span asp-validation-for="@item.Email" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="@item.INN" class="control-label"></label>
                                                    <input asp-for="@item.INN" name="INN" class="form-control" />
                                                    <span asp-validation-for="@item.INN" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="@item.Adress" class="control-label"></label>
                                                    <input asp-for="@item.Adress" name="Adress" class="form-control" />
                                                    <span asp-validation-for="@item.Adress" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Save" class="btn btn-primary" />
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div> |
                    @*Модальное для просмотра деталей*@
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#DetailsCompany-@item.Id">Details</button>
                    <div class="modal fade" id="DetailsCompany-@item.Id" tabindex="-1" aria-labelledby="DetailsCompanyLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="DetailsCompanyLabel-@item.Id">Companies</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <dl class="row">
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.Name)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => @item.Name)
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.Phone)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => @item.Phone)
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.Email)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => @item.Email)
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.INN)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => @item.INN)
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.Adress)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => @item.Adress)
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>|
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-controller="Employees" asp-action="Index" asp-route-id="@item.Id"> Employees </a>
                </td>
        </tr>
}
    </tbody>
</table>
